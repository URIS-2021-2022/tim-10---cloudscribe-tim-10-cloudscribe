@model cloudscribe.Core.Web.ViewModels.SiteUser.EmailRequiredViewModel
@inject IStringLocalizer<CloudscribeCore> sr
@{
    ViewData["Title"] = sr["An Email Address is Required"];
}

<h2>@ViewData["Title"]</h2>
<form asp-area="" asp-action="EmailRequired" asp-controller="Manage">
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">@sr["Email"]</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            @Html.ValidationMessage("invalidEmail", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button name="submit" type="submit" class="btn btn-default">@sr["Save"]</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_UnobtrusiveValidationScriptsPartial"); }
}
