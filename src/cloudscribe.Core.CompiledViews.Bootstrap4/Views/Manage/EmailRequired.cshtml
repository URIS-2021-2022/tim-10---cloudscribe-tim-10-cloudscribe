@model cloudscribe.Core.Web.ViewModels.SiteUser.EmailRequiredViewModel
@inject IStringLocalizer<CloudscribeCore> sr
@{
    ViewData["Title"] = sr["An Email Address is Required"];
}

<h2>@ViewData["Title"]</h2>
<form asp-area="" asp-action="EmailRequired" asp-controller="Manage">
    <div class="form-group">
        <label asp-for="Email">@sr["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="invalid-feedback"></span>
        @Html.ValidationMessage("invalidEmail", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button name="submit" type="submit" class="btn btn-primary">@sr["Save"]</button>
    </div>
</form>

@section Scripts {
    <script src="~/cr/js/jquery.validate.min.js"></script>
    <script src="~/cr/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/cr/js/unobtrusive-validation-bs4.min.js"></script>
}